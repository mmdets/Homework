<translate@FloatLayout>:
    
    content: ""
    out: ""

    Label:
        id: title
        text: "Translate this word:"
        pos_hint: {"x": .0, "y": .3}

    Label:
        id: rus
        text: root.out
        size_hint: .6, .1
        pos_hint: {"x": .2, "y": .5}

    TextInput:
        id: inputElement
        multiline: False
        text: root.content
        size_hint: .6, .1
        pos_hint: {"x": .2, "y": .6}

    Button:
        text: "Translate"
        size_hint: .6, .1
        pos_hint: {"x": .2, "y": .4}
        on_press: root.check_press(inputElement.text)

    Label:
        text: root.out
        size_hint: .6, .1
        pos_hint: {"x": .2, "y": .5}

    Button:
        text: "Quit"
        size_hint: .6, .1
        pos_hint: {"x": .2, "y": .25}
        on_press: root.quit()
