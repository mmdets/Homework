<Convert@FloatLayout>:
    content: "0"
    out: ""

    Label:
        text: "Temperature in Fahrenheit:"
        pos_hint: {"x": .1, "y": .7}

    TextInput:
        id: inputElement
        multiline: False
        text: root.content
        size_hint: .6, .1
        pos_hint: {"x": .2, "y": .6}

    Label:
        text: root.out
        size_hint: .6, .1
        pos_hint: {"x": .2, "y": .5}

    Button:
        text: "Convert"
        size_hint: .3, .1
        pos_hint: {"x": .3, "y": .4}
        on_press: root.output(inputElement.text)

    Button:
        text: "Quit"
        size_hint: .3, .1
        pos_hint: {"x": .3, "y": .3}
        on_press: root.quit()