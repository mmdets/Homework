<translate@GridLayout>:
    
    content: ""
    out: ""
    cols: 1

    BoxLayout:
        orientation: 'vertical'
        spacing: 10

        Label:
            text: "Translate this word:"
            pos_hint: {"x": .0, "y": .5}

        Label:
            id: rus
            text: root.out
            size_hint: .6, .3
            pos_hint: {"x": .2, "y": .5}

        TextInput:
            id: inputElement
            multiline: False
            text: root.content
            size_hint: .4, .3
            pos_hint: {"x": .3, "y": .6}

        Button:
            text: "Translate"
            size_hint: .4, .3
            pos_hint: {"x": .3, "y": .4}
            on_press: root.check_press(inputElement.text)

        Button:
            text: "Quit"
            size_hint: .4, .3
            pos_hint: {"x": .3, "y": .25}
            on_press: root.quit()
